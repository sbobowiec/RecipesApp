<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recipe_item_padding"
    android:background="@drawable/recipe_item_selector">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="@dimen/recipe_image_size"
        android:layout_height="@dimen/recipe_image_size"
        android:layout_centerVertical="true"
        android:contentDescription="@string/recipe_image_content_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/recipe_image"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/recipe_content_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

    </LinearLayout>

</RelativeLayout>